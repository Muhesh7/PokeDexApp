<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_red_light</item>
        <item name="colorPrimaryDark">@android:color/tertiary_text_light</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="actionBarSize">45sp</item>
    </style>
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/holo_red_light</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="cardbackgroundColor">#F4EAEA</item>
        <item name="backgroundColor">#FFD2D2</item>
        <item name="imagecolor">#F6EEEE</item>
        <item name="textcolor">@android:color/black</item>
        <item name="Barcolor">@android:color/holo_red_light</item>
    </style>
    <style name="DarkThemeNoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="backgroundColor">#252525</item>
        <item name="cardbackgroundColor">#474646</item>
        <item name="imagecolor">#FA4A4848</item>
        <item name="textcolor">@android:color/white</item>
        <item name="Barcolor">#212121</item>
    </style>
    <!-- Base application theme. -->
    <style name="DarkTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#303030</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="actionBarSize">45sp</item>
        <item name="backgroundColor">#252525</item>
        <item name="cardbackgroundColor">#474646</item>
        <item name="imagecolor">#FA4A4848</item>
        <item name="textcolor">@android:color/white</item>

    </style>


</resources>
